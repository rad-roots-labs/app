{
  "name": "pwa",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "build": "turbo build",
    "build:app": "turbo build --filter=app --filter=@radroots/*",
    "build:pkg": "turbo run build --filter=./packages/*",
    "dev:lib": "turbo dev --filter=@radroots/* --concurrency 20",
    "dev:app": "cd app && yarn dev"
  },
  "devDependencies": {
    "turbo": "2.5.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": {
    "packages": [
      "app",
      "packages/*",
      "../crates/*/bindings/ts",
      "../crates/*/pkg"
    ],
    "nohoist": []
  },
  "packageManager": "yarn@1.22.22"
}