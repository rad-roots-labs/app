{
    "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
    "identifier": "tangle.radroots.app",
    "productName": "Tangle",
    "mainBinaryName": "tangle",
    "build": {
        "frontendDist": "../../app/build",
        "devUrl": "http://localhost:3000",
        "beforeDevCommand": "cd app && pnpm run dev:hmr",
        "beforeBuildCommand": "cd app && pnpm run build"
    },
    "app": {
        "windows": [
            {
                "title": "tangle | rad roots",
                "resizable": false,
                "fullscreen": true,
                "visible": true
            }
        ]
    },
    "bundle": {
        "active": false,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}